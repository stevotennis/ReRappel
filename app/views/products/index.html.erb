<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="button_new_product">
  <button><%= link_to '+ New Product', new_product_path %></button>
</div>

<br>

<table class="product_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td><%= product.categpry %></td>
        <td><button><%= link_to 'Show', product %></button></td>
        <td><button><%= link_to 'Edit', edit_product_path(product) %></button></td>
        <td><button><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

